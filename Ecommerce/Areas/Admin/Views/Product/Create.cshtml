@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <label asp-for="Title"></label>
            <input asp-for="Title" type="text" class="form-control" />
            
        </div>
        <div class="mb-3 row">
            <label asp-for="Description"></label>
            <input asp-for="Description" type="text" class="form-control" />
            
        </div>
        <div class="mb-3 row">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" type="text" class="form-control" />
            
        </div>
        <div class="mb-3 row">
            <label asp-for="Author"></label>
            <input asp-for="Author" type="text" class="form-control" />

        </div>
        <div class="mb-3 row">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" type="text" class="form-control" />

        </div>
        <div class="mb-3 row">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="text" class="form-control" />

        </div>
        <div class="mb-3 row">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" type="text" class="form-control" />

        </div>
        <div class="mb-3 row">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" type="text" class="form-control" />

        <div class="mb-3 row">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" type="text" class="form-control" ><option disabled selected>--Select Category--</option></select>

        </div>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control" >Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>

        </div>

        
        
    </div>
</form>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial"></partial>
    }

}