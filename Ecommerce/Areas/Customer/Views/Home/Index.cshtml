@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div>
                        <div class="card borderobject-fit-contain p-3 shadow border-top border-5 rounded">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">Stock: <b>@product.Stock</b></p>
                            </div>
                            <div class="pl-1">
                                <p class=" text-dark text-opacity-75 text-uppercase text-center">Price: @product.ListPrice</p>
                                
                            </div>
                            <div>
                                <a asp-action="Details"
                                asp-route-productId="@product.Id"
                                class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
     
    }
</div>